<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Promoção:" FontSize="Large" />
        <Label Text="{Binding Text}" FontSize="Medium"/>
        <Label Text="Descrição:" FontSize="Large" />
        <Label Text="{Binding Description}" FontSize="Medium"/>
        <Label Text="Explicação:" FontSize="Large" />
        <Label Text="{Binding Explanation}" FontSize="Medium" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center"/>

        <Button Margin="0,10,0,0" Text="Resgate seu cupom da vacina COVID-19!"
                        Clicked="OnButtonClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />

        <Label x:Name="label"
               Text="Cupom: QU4J1K24HJ1"
               FontSize="Large"
               TextColor="Green"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
               IsVisible="{Binding IsStartVisible}"/>
    </StackLayout>
    
</ContentPage>